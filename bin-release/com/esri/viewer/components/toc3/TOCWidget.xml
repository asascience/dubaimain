<configuration>
	<labels>
		<visibilitylabel>Layer Visibility</visibilitylabel>
		<legendlabel>Show Dynamic Map Legend</legendlabel>
	</labels>
	<tocSettings>
		<expanded>true</expanded>
	</tocSettings>
	<legendexcludelayers>
		<!-- Both map services and map service sub layers can be excluded -->
		<legendexcludelayer mapservice="Parcel Data">68</legendexcludelayer>
	</legendexcludelayers>
	<excludeLayers>
		<!-- ONLY WHOLE MAP SERVICES CAN BE EXCLUDED FROM TOC -->
		<excludelayer>Recreation</excludelayer>
	</excludeLayers>
	<excludeGraphicLayers>true</excludeGraphicLayers>
	<excludeBasemapLayers>true</excludeBasemapLayers>
</configuration>